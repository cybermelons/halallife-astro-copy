---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.tsx';
import RestaurantGrid from '../components/RestaurantGrid.tsx';
import EligibilityBanner from '../components/EligibilityBanner.tsx';
import WhatIsHalal from '../components/WhatIsHalal.tsx';
---

<Layout title="GoHalalLife - Find Halal Restaurants Near You">
  <Hero client:load />
  
  <!-- Restaurant Grid Section -->
  <section class="py-16 bg-gray-50">
    <div class="sitewidth">
      <h2 class="heading text-center mb-12">Featured Restaurants</h2>
      <RestaurantGrid client:visible />
    </div>
  </section>

  <!-- Eligibility Banner -->
  <EligibilityBanner />

  <!-- What is Halal Section -->
  <WhatIsHalal />
</Layout>
